<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTemperatura"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/temperatura"
                    android:fontFamily="@font/carter_one"
                    android:paddingLeft="120dp"
                    android:paddingTop="30dp"
                    android:text="TextView"
                    android:textColor="#EDF0ED"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/tvPresion"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/clima_nuves"
                    android:fontFamily="@font/carter_one"
                    android:paddingLeft="120dp"
                    android:paddingTop="30dp"
                    android:text="TextView"
                    android:textColor="#EDF0ED"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/tvHumedad"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:background="@drawable/humedad"
                    android:fontFamily="@font/carter_one"
                    android:paddingLeft="120dp"
                    android:paddingTop="30dp"
                    android:text="TextView"
                    android:textColor="#EDF0ED"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/tvViento"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/viento"
                    android:fontFamily="@font/carter_one"
                    android:paddingLeft="120dp"
                    android:paddingTop="30dp"
                    android:text="TextView"
                    android:textColor="#EDF0ED"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/tvLluvia"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/lluvia"
                    android:fontFamily="@font/carter_one"
                    android:paddingLeft="120dp"
                    android:paddingTop="30dp"
                    android:text="TextView"
                    android:textColor="#EDF0ED"
                    android:textSize="40sp" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
